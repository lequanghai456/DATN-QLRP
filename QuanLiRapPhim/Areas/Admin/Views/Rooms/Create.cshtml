@model QuanLiRapPhim.Areas.Admin.Models.Room


<h1>@(ViewContext.RouteData.Values["id"] == null ? "Thêm mới" : "Cập nhật")</h1>
<form asp-action=@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit") method="post" class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{ if (ViewContext.RouteData.Values["id"] != null)
        {
            <input id="idEdit" type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="Name" class="form-control" />
        }
    }
    <div class="form-group col-6">
        <label asp-for="Row" class="control-label"></label>
        <input asp-for="Row" class="form-control" />
        <span asp-validation-for="Row" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Col" class="control-label"></label>
        <input asp-for="Col" class="form-control" />
        <span asp-validation-for="Col" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group col-12 d-flex justify-content-center">
        <input type="submit" value="@(ViewContext.RouteData.Values["id"] == null ? "Thêm" : "Cập nhật")" class="btn btn-primary" />
        @{ if (ViewContext.RouteData.Values["id"] != null)
            {
                <a href="~/admin/Rooms" class="btn btn-warning">Hủy</a>
            }
        }
    </div>
</form>


