@model QuanLiRapPhim.Areas.Admin.Models.Room
<div class="col-md-4">
    <h1>@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit")</h1>
    <form asp-action=@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit") method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @{ if (ViewContext.RouteData.Values["id"] != null)
            {
                <input type="hidden" asp-for="Id" />
            }
        }
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Row" class="control-label"></label>
            <input asp-for="Row" class="form-control" />
            <span asp-validation-for="Row" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Col" class="control-label"></label>
            <input asp-for="Col" class="form-control" />
            <span asp-validation-for="Col" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdStaftManager" class="control-label"></label>
            <select asp-for="IdStaftManager" class="form-control" asp-items="ViewBag.IdStaf">
                
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit")" class="btn btn-primary" />
        </div>
    </form>
</div>

