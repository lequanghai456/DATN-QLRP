@model QuanLiRapPhim.Areas.Admin.Models.Sevice
    <style>
        .Sevice {
            margin: 2px;
            padding: 5px;
            display: flex;
            background-color: #1ae21a;
            border-radius: 5px;
            justify-content: space-between;
            text-align: center;
            
        }



        .list-Sevice-categories {
            background-color: #eee;
            height: 300px;
            border: 1px dotted black;
            overflow: scroll;
            border: 5px dashed green;
            color: white;
        }
    </style>    
        <h1>@(ViewContext.RouteData.Values["id"] == null ? "Thêm" : "Cập nhật")</h1>
        <div class="row">
            <form asp-action=@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit") method="post" class="r col-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @{ if (ViewContext.RouteData.Values["id"] != null)
                    {
                        <input id="idEdit" type="hidden" asp-for="Id" />
                        <input ng-init="ListSeviecs.push()" />
                    }
                }

                }
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsFood" class="control-label"></label>
                    <select asp-for="IsFood" class="form-control">
                        <option value="true">Thức ăn</option>
                        <option value="false">Nước</option>
                    </select>
                    <span asp-validation-for="IsFood" class="text-danger"></span>
                </div>
