                <div class="form-group" hidden ng-repeat="item in ListSeviecs">
                    <label class="control-label">Kích thước</label>
                    <input class="form-control" name="ListSeviceCategories[{{$index}}].name" ng-model="item.name" required type="text" />
                    <label class="control-label">Giá</label>
                    <input class="form-control" name="ListSeviceCategories[{{$index}}].price" ng-model="item.price" required type="number" min="0" />
                </div>

                <div class="form-group col-12 d-flex justify-content-center">
                    <input type="submit" value="@(ViewContext.RouteData.Values["id"] == null ? "Thêm" : "Cập nhật")" class="btn btn-primary" />
                    @{ if (ViewContext.RouteData.Values["id"] != null)
                        {
                            <a href="~/admin/Sevices" class="btn btn-warning">Hủy</a>
                        }
                    }
                </div>
            </form>
            <div class="col-6">
                <h2>Danh sách kích thước</h2>
                <div class="" ng-repeat="item in ListSeviecs">
                    <div class="Sevice">
                        <span class="" style="color: white;">Tên loại:{{item.name}} - Giá: {{item.price}}</span>
                        <a class="btn btn-danger" ng-click="action.del($index)"> xóa </a>
                    </div>

                </div>
                <div class="form-group">
                    <label class="control-label">Kích thước</label>
                    <input class="form-control" ng-model="name" required type="text" />
                    <label class="control-label">Giá</label>
                    <input class="form-control" ng-model="price" required type="number" min="0" />
                </div>
                <h2 class="alert-danger">{{Mess}}</h2>
                <input type="submit" class="btn btn-primary" ng-click="addCategorySevice()" value="Thêm loại" />
            </div>
        </div>
           
            
