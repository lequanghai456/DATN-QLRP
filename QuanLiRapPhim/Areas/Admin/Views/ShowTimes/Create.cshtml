@model QuanLiRapPhim.Areas.Admin.Models.ShowTime
<h1>@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit")</h1>
<form asp-action=@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit") method="post" class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{ if (ViewContext.RouteData.Values["id"] != null)
        {
            <input id="idEdit" type="hidden" asp-for="Id" />
        }
    }
    <div class="form-group col-3">
        <label asp-for="DateTime" class="control-label"></label>
        <input asp-for="DateTime"  class="form-control" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>
    
    <div class="form-group col-3">
        <label asp-for="startTime" class="control-label"></label>
        <input asp-for="startTime" class="form-control" />
        <span asp-validation-for="startTime" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="MovieId" class="control-label"></label>
        <select asp-for="MovieId" class="form-control" asp-items="@(new SelectList(ViewBag.ListMovies,"Id","Title"))"></select>
    </div>
    <div class="form-group col-3">
        <label asp-for="RoomId" class="control-label"></label>
        <select asp-for="RoomId" class="form-control" asp-items="@(new SelectList(ViewBag.ListRooms,"Id","Name"))"></select>
    </div>

    <div class="form-group col-12 d-flex justify-content-center">
        <input type="submit" value="@(ViewContext.RouteData.Values["id"] == null ? "Create" : "Edit")" class="btn btn-primary" />
        @{ if (ViewContext.RouteData.Values["id"] != null)
            {
                <a href="~/admin/ShowTimes" class="btn btn-warning">Canncel</a>
            }
        }
    </div>
</form>

