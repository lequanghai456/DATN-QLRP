<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("_HeadPartial")
    @RenderSection("css", required: false)
    <style>
        .form-control {
            width: 100% !important;
        }

        span .selection {
            display: block;
        }
        .img-thumbnail{
            width:100px;
            height:100px;
        }

        .Center {
            text-align: center;
            vertical-align: middle !important;
        }
        table, th, td {
            border: 1px solid grey;
            border-collapse: collapse;
            padding: 5px;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_SidebarPartial")
    <div class="page">
        <!-- navbar-->
        @await Html.PartialAsync("_HeaderPartial")
        <div class="container">
            @RenderBody()
        </div>
        @await Html.PartialAsync("_FooterPartial")
    </div>
    @await Html.PartialAsync("_LibJSPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>
