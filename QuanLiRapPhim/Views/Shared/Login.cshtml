@model QuanLiRapPhim.Areas.Admin.Models.User
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body">
                <ul class="nav nav-pills nav-fill">
                    <li class="nav-item"> <a class="nav-link active" data-toggle="pill" href="#Login">Đăng nhập</a></li>
                    <li class="nav-item"> <a class="nav-link" data-toggle="pill" href="#Regrister">Đăng kí</a></li>
                </ul>
                <div class="tab-content">
                    <div id="Login" class="tab-pane fabe in active">
                        <h1 style="color: red;">Đăng nhập</h1>
                        <form asp-action="Login" asp-controller="Login" method="post">
                            <br />
                            <div class="row">
                                <div class="col-sm-4">
                                    <h4 style="display: flex; align-items: center; height: 100%;">
                                        Tên đăng nhập:
                                    </h4>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" asp-for="UserName" name="UserName" class="form-control">
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-4">
                                    <h4 style="display: flex; align-items: center; height: 100%;">
                                        Mật khẩu:
                                    </h4>
                                </div>
                                <div class="col-sm-8">
                                    <input type="password" name="PasswordHash" asp-for="PasswordHash" class="form-control" >
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>Nếu bạn chưa có tài khoản ? <a href="#">Đăng ký</a></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center" style="margin:auto;">
                                    <input type="submit" value="Đăng nhập" class="btn">
                                </div>
                                @*<div class="col-sm-6 text-center">
                                    <button type="button" class="btn btn-dark" style="width:200px;">
                                        Hủy bỏ
                                    </button>
                                </div>*@
                            </div>
                        </form>
                    </div>
                    <div id="Regrister" class="tab-pane fabe">
                        <h1 style="color: red;">Đăng kí</h1>
                    </div>
                </div>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>