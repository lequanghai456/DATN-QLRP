@using Microsoft.AspNetCore.Identity
@using QuanLiRapPhim.Areas.Admin.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<header class="site-header">
    <div class="container">
        <a asp-action="Index" asp-controller="Home" id="branding">
            <img src="~/images/logo.png" alt="" class="logo">
            <div class="logo-copy">
                <h1 class="site-title">Cine plus +</h1>
                <small class="site-description">Tagline goes here</small>
            </div>
        </a> <!-- #branding -->

        <div class="main-navigation">
            <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
            <ul class="menu">
                <li class="menu-item" id="home">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/images/home.png" width="24" height="26" />
                        Trang chủ
                    </a>
                </li>
                <li class="menu-item" id="movie_review">
                    <a asp-controller="moviereview" asp-action="Index">
                        <img src="~/images/cinema.png" alt="" srcset="" width="24" height="26">
                        Danh sách phim
                    </a>
                </li>
                <li class="menu-item" id="showtimes">
                    <a asp-controller="Showtimes" asp-action="Index">
                        <img src="~/images/time.png" alt="" srcset="" width="24" height="26">
                        Lịch chiếu phim
                    </a>
                </li>
                @if (SignInManager.IsSignedIn(User) && @User.FindFirst("FullNameUser") != null)
                {
                    <li class="menu-item" id="my_order">
                        <a asp-controller="YourOrder" asp-action="Index">
                            <img src="https://www.cgv.vn/skin/frontend/cgv/default/images/bg-cgv/icon_ticket25.png"
                                 alt="" srcset="" width="24" height="26">
                            Hóa đơn
                        </a>
                    </li>

                    <li class="menu-item" id="profile">
                        <a asp-controller="Profile" asp-action="Index">
                            <img src="https://www.cgv.vn/skin/frontend/cgv/default/images/bg-cgv/icon_login25.png"
                                 width="24" height="26">

                            @User.FindFirst("FullNameUser").Value!
                            <div id="id" hidden>@User.FindFirst("Id").Value</div>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a asp-controller="Login" asp-action="Logout" style="height:100%">

                            <img src="https://image.flaticon.com/icons/png/512/25/25376.png" width="24" height="26" />
                            Đăng xuất
                        </a>
                    </li>
                }
                else
                {
                    //if (ViewData["Title"] != "Login")
                    //{
                    <li class="menu-item">
                        <a asp-controller="login" asp-action="Index" style="height:100%">
                            <img src="https://cdn-icons-png.flaticon.com/512/25/25245.png" width="24" height="26" />
                            Đăng nhập
                        </a>
                    </li>
                    //}
                }



            </ul> <!-- .menu -->

        </div> <!-- .main-navigation -->

        <div class="mobile-navigation"></div>
    </div>

</header>
