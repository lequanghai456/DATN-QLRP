@model QuanLiRapPhim.Controllers.RegisterController.inputEmail
<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                        <form asp-action="ForgotPassword" asp-controller="Register" method="post" enctype="multipart/form-data">
                            <div class="row row-space">
                                <div class="col-12">
                                    <div class="input-group">
                                        <h1 class="alert-info">@ViewData["MessForgotPassword"]</h1>
                                        <label class="label">Nhập địa chỉ email mà bạn đã xác nhận cho tài khoản của bạn</label>
                                        <input asp-for="Email" class="input--style-4" type="text"  name="Email">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="p-t-15">
                                <input  class="btn btn-primary" type="submit" value="Xác nhận">
                            </div>
                        </form>

            </div>
        </div>
    </div>
</div>
