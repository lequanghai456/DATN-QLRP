@{
    ViewData["Title"] = "Movie Review | Profile";
}
@model QuanLiRapPhim.Controllers.RegisterController.Users
@using Microsoft.AspNetCore.Identity
@using QuanLiRapPhim.Areas.Admin.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<div ng-app="App" ng-controller="Ctroller">
    <form asp-action="" method="post" class="row" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input id="idEdit" type="hidden" />
        <div class="form-group col-6" style="text-align:center;">
            <div class="custom-file" style="margin-top: 30px; width:300px;">
            <input accept="*.png|*.jpg|*.jpep" type="file" name="ful" class="custom-file-input" id="ful" />
            <label class="custom-file-label" for="ful" style="text-align:left;"><span><i class="fa fa-camera"></i> Đổi avatar</span></label>
            </div>
        <img id="imgPre" src="~/images/pro/@(ViewContext.RouteData.Values["id"] == null ? "avatar.png" : ViewData["Img"])" alt="Alternate Text" style="width:300px; height:300px;" />
           

        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" name="FullName" class="form-control" value="@Model.FullName"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" name="DateOfBirth" class="form-control"  value="@Model.DateOfBirth.ToString("yyyy-dd-MM")"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" value="@Model.UserName" class="form-control" disabled />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" disabled />*@
                <button type="button" ng-click="EditPass()">ĐỔI MẬT KHẨU</button>
            </div>
            <div ng-show="EditPassword">
                <div class="form-group">
                    <label class="label">Mật khẩu mới</label>
                    <input id="password" asp-for="PasswordHash" class="form-control" type="PassWord" name="PasswordHash">
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="label">Nhập lại mật khẩu</label>
                    <input asp-for="confirmPasswordHash" class="form-control" id="confirm_password" type="Password" name="confirmPasswordHash"><span id='message'></span>
                    <span asp-validation-for="confirmPasswordHash" class="text-danger"></span>

                </div>
            </div>
        </div>
        <div class="form-group col-12 d-flex justify-content-center">
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
        </div>
    </form>

</div>


@section Scripts {
    <script src="~/View/front-end/profile/controller.js"></script>
<script>
    function readURL(input, idImg) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $(idImg).attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#ful").change(function () {
        readURL(this, '#imgPre');
    })
</script>
}